

<%= form_with(model: @offer, local: true) do |form| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibieron que esta oferta se guardara:</h2>
      <ul>
        <% @offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="container forget-password">
    <div class="row">
    <div class="col-md-12 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-center">
            <img src="https://i.ibb.co/rshckyB/car-key.png" alt="car-key" border="0">
            <h2 class="text-center">Nueva oferta Laboral</h2>
            <div class="form-group">
              <%= form.label :title %><br>
              <%= form.text_field :title %>
            </div>
          <div class="field">
          <%= form.label :description %><br>
          <%= form.text_area :description %>
        </div>
        <div class="actions py-2">
          <%= form.submit 'Crear Oferta', class: 'btn btn-secondary' %>
          <%= link_to 'Volver', offers_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>