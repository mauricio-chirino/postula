

<%= form_with model: @user, url: admin_users_path do |f| %>
  <div class="container forget-password">
    <div class="row">
      <div class="col-md-12 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="text-center">
              <img src="https://www.computerhope.com/jargon/g/guest-user.png" border="0">
              <h2 class="text-center">Crear usuario</h2>
              <div class="field">
                <%= f.label :nombre %><br />
                <%= f.text_field :name, autocomplete: "Nombre", required: true %>
              </div>


              <div class="form-group row justify-content-md-center">
                <%= f.label :avatar, class: "col-form-label" %>
                <div class="col-md-6">
                  <%= f.file_field :avatar, accept: "image/*", required: true, class: "form-control-file" %>
                </div>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
              </div>

              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", required: true %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
              </div>

              <div class="actions py-3">
                <%= f.submit "Registrame", class: "btn btn-secondary" %>
                <%= link_to "Cancelar", root_path, class: "btn btn-secondary" %>
              </div>
            </div>
          </div>  
        </div>
      </div>
    </div>
  </div>
<% end %>

